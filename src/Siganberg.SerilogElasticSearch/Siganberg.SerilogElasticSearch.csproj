<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <PackageId>Siganberg.SerilogElasticSearch</PackageId>
        <Version>1.0.14</Version>
        <Authors>Francis Marasigan</Authors>
        <Company>Siganberg</Company>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageProjectUrl>https://github.com/francischie/Siganberg.SerilogElasticSearch</PackageProjectUrl>
        <AssemblyName>Siganberg.SerilogElasticSearch</AssemblyName>
        <RootNamespace>Siganberg.SerilogElasticSearch</RootNamespace>
        <PackageReleaseNotes>
            - Added checking for HttpContext to fix issue with :  "Unhandled exception. System.ObjectDisposedException: IFeatureCollection has been disposed."
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.App" />
        <PackageReference Include="Serilog" Version="2.9.0" />
        <PackageReference Include="Serilog.AspNetCore" Version="3.2.0" />
    </ItemGroup>



</Project>
